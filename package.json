{
  "name": "monkind-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "MonKind 電商平台 Monorepo",
  "scripts": {
    "dev:customer": "pnpm --filter customer-app start",
    "dev:admin": "pnpm --filter admin-app dev",
    "dev:all": "pnpm --parallel --filter customer-app --filter admin-app start",
    "build:customer": "pnpm --filter customer-app build",
    "build:admin": "pnpm --filter admin-app build",
    "build:all": "pnpm --parallel --filter customer-app --filter admin-app build",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive clean && rm -rf node_modules"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "monorepo",
    "e-commerce",
    "gift",
    "customization"
  ],
  "author": "MonKind Team",
  "license": "UNLICENSED"
}
